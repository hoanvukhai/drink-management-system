generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  MANAGER
  ADMIN
}

// üëá Tr·∫°ng th√°i Order ƒë∆°n gi·∫£n
enum OrderStatus {
  PENDING    // ƒêang ch·ªù pha ch·∫ø
  READY      // ƒê√£ pha xong, ch·ªù mang ra
  SERVED     // ƒê√£ mang ra cho kh√°ch
  COMPLETED  // ƒê√£ thanh to√°n
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String?
  role      Role     @default(EMPLOYEE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  price       Float
  imageUrl    String?
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  Int
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  recipe      Recipe?
}

model Zone {
  id        Int      @id @default(autoincrement())
  name      String
  tables    Table[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id          Int         @id @default(autoincrement())
  name        String
  capacity    Int         @default(4)
  status      TableStatus @default(AVAILABLE)
  zone        Zone        @relation(fields: [zoneId], references: [id])
  zoneId      Int
  orders      Order[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Order {
  id              Int         @id @default(autoincrement())
  orderNumber     String      @unique // #0001
  totalAmount     Float       @default(0)
  status          OrderStatus @default(PENDING)
  type            String      @default("DINE_IN") // DINE_IN | TAKEAWAY
  
  // Table (null n·∫øu mang v·ªÅ)
  table           Table?      @relation(fields: [tableId], references: [id])
  tableId         Int?
  
  // Customer (optional cho takeaway)
  customerName    String?
  customerPhone   String?
  
  // Timing
  createdAt       DateTime    @default(now())     // Th·ªùi gian t·∫°o ƒë∆°n
  readyAt         DateTime?                       // Th·ªùi gian pha ch·∫ø xong
  servedAt        DateTime?                       // Th·ªùi gian mang ra
  completedAt     DateTime?                       // Th·ªùi gian thanh to√°n
  
  items           OrderItem[]
  
  @@index([status])
  @@index([tableId])
}

model OrderItem {
  id          Int      @id @default(autoincrement())
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     Int
  product     Product  @relation(fields: [productId], references: [id])
  productId   Int
  quantity    Int
  price       Float    // Gi√° t·∫°i th·ªùi ƒëi·ªÉm order
  note        String?  // Ghi ch√∫: "√çt ƒë∆∞·ªùng", "Nhi·ªÅu ƒë√°"
  isServed    Boolean  @default(false) // üëà ƒê√£ mang ra ch∆∞a?
  createdAt   DateTime @default(now())
  
  isCompleted Boolean  @default(false) // Pha ch·∫ø xong ch∆∞a?
  completedAt DateTime?                // Th·ªùi gian ho√†n th√†nh
  edits       OrderItemEdit[]          // L·ªãch s·ª≠ s·ª≠a
  @@index([orderId])
}

model Recipe {
  id          Int               @id @default(autoincrement())
  product     Product           @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId   Int               @unique
  description String?           // M√¥ t·∫£ chung
  steps       RecipeStep[]
  ingredients RecipeIngredient[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
}

model RecipeStep {
  id          Int      @id @default(autoincrement())
  recipe      Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    Int
  stepNumber  Int      // 1, 2, 3...
  instruction String   // "Cho 30ml syrup v√†o ly"
  createdAt   DateTime @default(now())

  @@index([recipeId])
}

model RecipeIngredient {
  id          Int      @id @default(autoincrement())
  recipe      Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    Int
  name        String   // "Syrup d√¢u", "Tr√¢n ch√¢u"
  quantity    String   // "30ml", "50g"
  note        String?  // "C√≥ th·ªÉ ƒëi·ªÅu ch·ªânh theo kh√°ch"
  createdAt   DateTime @default(now())

  @@index([recipeId])
}

model OrderItemEdit {
  id          Int      @id @default(autoincrement())
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  orderItemId Int
  action      String   // "DELETE", "UPDATE_QUANTITY", "UPDATE_NOTE"
  oldValue    String?  // JSON string c·ªßa gi√° tr·ªã c≈©
  newValue    String?  // JSON string c·ªßa gi√° tr·ªã m·ªõi
  reason      String   // L√Ω do b·∫Øt bu·ªôc
  userId      Int?     // Ai ch·ªânh s·ª≠a
  createdAt   DateTime @default(now())

  @@index([orderItemId])
}