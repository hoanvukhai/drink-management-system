generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // khong sao
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  products  Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  price       Float
  imageUrl    String?
  category    Category  @relation(fields: [categoryId], references: [id])
  categoryId  Int
  orderItems  OrderItem[]
}

model Order {
  id          Int         @id @default(autoincrement())
  createdAt   DateTime    @default(now())
  totalAmount Float
  status      String      @default("PENDING")
  items       OrderItem[]
  table       Table?      @relation(fields: [tableId], references: [id])
  tableId     Int?
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  note      String?
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}

enum Role {
  EMPLOYEE  // Pha chế, Phục vụ, Thu ngân
  MANAGER   
  ADMIN      
}

// Dán ngay bên dưới enum Role

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique // Email dùng để đăng nhập
  password  String   // Mật khẩu sẽ được hash (băm)
  name      String?  // Tên (có thể có hoặc không)
  role      Role     @default(EMPLOYEE) // Mặc định khi tạo là Nhân viên
  // (Các liên kết khác về sau, ví dụ: chấm công, đơn hàng đã tạo...)
}

model Zone {
  id        Int      @id @default(autoincrement())
  name      String   // Ví dụ: "Tầng 1"
  tables    Table[]
}

model Table {
  id        Int      @id @default(autoincrement())
  name      String   // Ví dụ: "Bàn 01"
  status    String   @default("AVAILABLE") // Trạng thái: AVAILABLE (Trống), OCCUPIED (Có khách)
  zone      Zone     @relation(fields: [zoneId], references: [id])
  zoneId    Int
  orders    Order[]
}